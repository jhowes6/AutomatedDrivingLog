<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/list_item_session_title_text_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text=" Sessions Title" />

    <TextView
        android:id="@+id/list_item_duration_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textColor="#FF0000"
        android:layout_toRightOf="@id/list_item_session_title_text_view"
        android:layout_alignParentTop="true"
        android:text="00:00:55" />

    <TextView
        android:id="@+id/list_item_session_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_session_title_text_view"
        android:padding="4dp"
        tools:text="Session Date"/>



</RelativeLayout>